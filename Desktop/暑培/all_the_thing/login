/* 过滤标签 */
 filterHTMLTag = function (msg) {
    var// msg = msg.replace(/<\/?[^>]*>/g, ''); //去除HTML Tag
    msg = msg.replace(/[|]*\n/, '') //去除行尾空格
    msg = msg.replace(/&npsp;/ig, ''); //去掉npsp
    return msg;
}
 
renderData = function (dataList){
	$.each(dataList,function(i,val){
		if(val.detail==null){
			var detail ='';
		}else{
			detail= MyApp.escapeChars(val.bz);
		}
		var rows = "<div class='con-hover'> <div class='hover-item'> <div onclick='noticedetail(\""+val.ggid+"\")'  class='item-notice'> <div class='title' title= '"+val.title+"'>"+val.title+"</div>";
			rows += "<div class='desc'> <span>"+filterHTMLTag(detail)+"</span></div>";
			rows += "<div class='time'>"+ formatDateTime(val.reg_date).substring(0,10) +"</div><a onclick='noticedetail(\""+val.ggid+"\")' class='cjakan ck_gg'>查看详情<img src='/res/app/wlxt/img/arrow11.png' alt=''></a></div>";
			rows += "</div></div></div>";
		$("#notice").append(rows);
	});
	$(".math-tex").attr("style","display:none");
};
 
